# EngageBot .env example (no real secrets)

# Adapter choice: only 'mock' is supported in this PoC
ADAPTER=mock

# Mock credentials (not used for auth in mock)
USERNAME=demo
PASSWORD=demo

# Defaults
DEFAULT_TAG=fitness
DISCOVER_LIMIT=20

# Per-run caps
MAX_LIKES_PER_RUN=5
MAX_FOLLOWS_PER_RUN=1
MAX_COMMENTS_PER_RUN=1

# Delay ranges in seconds (min,max)
LIKE_DELAY_RANGE_S="2,5"
FOLLOW_DELAY_RANGE_S="5,10"
COMMENT_DELAY_RANGE_S="8,12"

DRY_RUN=true
LOG_JSON=false
SEED=12345
DEFAULT_COMMENT_TEXT=Nice work!

# Mock adapter rate limits per-minute
MOCK_MAX_LIKES_PER_MIN=10
MOCK_MAX_FOLLOWS_PER_MIN=5
MOCK_MAX_COMMENTS_PER_MIN=5

# Mock latency ms range (min,max)
MOCK_LATENCY_MS_RANGE="50,150"

# Scheduler cron
SCHEDULE_CRON="*/30 * * * *"
